<%= form_with model: timezone do |form| %>
  <div class="form-group">
    <%= form.label "Time zone", class: "form-label" %><br>
    <%= form.time_zone_select(:fav_timezones, ActiveSupport::TimeZone.us_zones, {}, class: "form-control") %>
  </div>
  <div>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>