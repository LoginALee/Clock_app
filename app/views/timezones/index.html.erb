<div class="container">
  <h3>My Time Zones</h3>
  <div class="card ml-3 mt-3 mb-4" style="width: 18rem;">
    <%= image_tag ("globe-icon.png"), class: "w-25 m-auto" %>
    <div class="card-body">
      <h5 class="card-title">Current Time Zone</h5>
      <p class="card-text"><%= time_zone_format(@current_time_zone) %></p>
      <%= link_to "Edit", edit_time_zone_path(current_user), class: "btn btn-primary" %>
    </div>
  </div>
  <h4>Favorites</h4>
  <div class="row justify-content-end">
    <%= link_to "New Time Zone", new_timezone_path, class: "btn btn-primary ml-auto" %>
  </div>
  <div class="row mt-2">
    <%= render @time_zones %>
  </div>
</div>
