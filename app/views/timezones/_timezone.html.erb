<diV class="col m-3">
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title">Time Zone</h5>
      <p class="card-text"><%= time_zone_format(timezone.fav_timezones) %></p>
      <p class="font-italic small"><%= time_zone_info(timezone.fav_timezones) %></p>
      <%= link_to "Edit", edit_timezone_path(timezone), class: "btn btn-primary" %>
      <%= link_to "Destroy", timezone_path(timezone), class: "btn btn-danger",
                                                      method: :delete,
                                                      data: { confirm: "Are you sure?" } %>
    </div>
  </div>
</div>
