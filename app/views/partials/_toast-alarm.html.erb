<div class="position-fixed bottom-0 right-0 p-3" style="z-index: 5; right: 0; bottom: 0;">
  <div id="liveToast" class="toast hide" role="alert" aria-live="assertive" aria-atomic="true" data-autohide="false">
    <div class="toast-header bg-danger text-white">
      <i class="bi bi-alarm-fill mr-1"></i>
      <strong class="mr-auto" id="toastHeader">Alarm</strong>
      <small>Now</small>
      <button type="button" id="toastClose" class="ml-2 mb-1 close text-white" data-dismiss="toast" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="toast-body" id="toastBody">
    </div>
    <button type="button" id="toastSnooze" class="btn btn-link w-100">
      Snooze
    </button>
  </div>
</div>
